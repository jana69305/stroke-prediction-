name: Run Stroke Prediction from Colab Code

on:
  push:
    branches: [ main ]

jobs:
  run-stroke:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run notebook
        run: |
          pip install nbconvert jupyter
          jupyter nbconvert --to notebook --execute stroke_prediction.ipynb --output result.ipynb
